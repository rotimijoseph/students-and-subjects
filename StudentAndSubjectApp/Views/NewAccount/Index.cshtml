<script src="~/js/datepicker.js"></script>
<script src="~/js/validateInputValue.js"></script>

<form action="@Url.Action("AccountCreated", "NewAccount")" method="post" class="row g-3" id="studentForm">
    <div class="form-group col-lg-7">
        <label for="title" class="col-form-label">Title</label>
        <select class="form-select form-control" id="title">
            <option value="mr">Mr</option>
            <option value="ms">Ms</option>
            <option value="dr">Dr</option>
            <option value="honorable">Honorable</option>
            <option value="rev">Rev</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div class="form-group col-lg-7" id="otherTitleContainer" style="display: none;">
        <label for="otherTitle">Other Title</label>
        <input type="text" id="otherTitle" name="otherTitle" class="form-control" />
    </div>
    <div class="col-lg-7">
        <label for="firstName" class="col-form-label">First name</label>
        <input type="text" id="firstName" name="firstName" class="form-control" required>
    </div>
    <div class="col-lg-7">
        <label for="surname" class="col-form-label">Surname</label>
        <input type="text" id="surname" name="surname" class="form-control" required>
    </div>
    <div class="col-lg-7">
        <label for="emailAddress" class="col-form-label">Email address</label>
        <input type="email" id="emailAddress" name="emailAddress" class="form-control" required>
        <small id="validationConcerns" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="col-lg-7">
        <label for="dateOfBirth" class="col-form-label">Date of birth</label>
        <input type="text" id="datepicker" class="datepicker form-control" name="dateOfBirth" required>
    </div>
    <div class="col-lg-7">
        <label for="subject1" class="col-form-label">Subject 1</label>
        <input type="text" id="subject1" name="subject1" class="form-control" required>
        <small id="validationConcerns" class="form-text text-muted">*Required</small>
    </div>
    <div class="col-lg-7">
        <label for="subject2" class="col-form-label">Subject 2</label>
        <input type="text" id="subject2" name="subject2" class="form-control">
    </div>
    <div class="col-12">
        <input type="submit" value="Submit" class="btn btn-primary">
    </div>
</form>

